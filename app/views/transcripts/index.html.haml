
%table.transcripts
  %tr
    %th Date
    %th Creator
    %th Title
    %th Language
    %th Country
    %th Media
  - @transcripts.each do |transcript|
    %tr
      %td=  transcript.date
      %td=  transcript.creator
      %td=  link_to transcript.title, transcript
      %td=  transcript.language_code
      %td==  transcript.country
      %td=  transcript.media_item ? transcript.media_item.title : ""


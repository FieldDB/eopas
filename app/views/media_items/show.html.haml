
#media_item
  #media_display
    - if @media_item.original_processing
      %p
        = image_tag '/originals/poster/missing.png'
    -else
      %p
        = media_item_video_tag @media_item

  #metadata_display
    %h3
      = @media_item.title

    %table#metadata.small
      %tr#item_id
        %td#name
          Item ID
        %td#value
          = @media_item.item_id

      %tr#depositor
        %td#name
          Depositor
        %td#value
          = @media_item.depositor.full_name

      %tr#recorded_at
        %td#name
          Recorded on
        %td#value
          = @media_item.recorded_at

      %tr#annotator_name
        %td#name
          Name of Annotator
        %td#value
          = @media_item.annotator_name

      %tr#presenter_name
        %td#name
          Name of Presenter
        %td#value
          = @media_item.presenter_name

      %tr#presenter_role
        %td#name
          Role of Presenter
        %td#value
          = @media_item.presenter_role

      %tr#language_code
        %td#name
          Language Code
        %td#value
          = @media_item.language_code

      %tr#copyright
        %td#name
          Copyright
        %td#value
          = @media_item.copyright

      %tr#license
        %td#name
          License
        %td#value
          = @media_item.license

      %tr#private
        %td#name
          Private
        %td#value
          = @media_item.private

      - if (@media_item.depositor.id == current_user.id)
        %tr#download
          %td#name
            Download
          %td#value
            = link_to @media_item.original.url(:standard), @media_item.original.url(:standard)

  - if @media_item.transcripts
    #transcripts
      - @media_item.transcripts.each do |transcript|
        .transcript
          .metadata
            .title
              %strong Creator
              = transcript.creator
            .language_code
              %strong Language Code
              = transcript.language_code
            .date
              %strong Date
              = transcript.date
            .depositor
              %strong Depositor
              = transcript.depositor.full_name
          .transcript_tiers
            - transcript.transcript_tiers.each do |transcript_tier|
              .transcript_tier
                == Language Code #{transcript_tier.language_code}
                == Language Type #{transcript_tier.linguistic_type}
                - transcript_tier.transcript_phrases.each do |transcript_phrase|
                  .transcript_phrase
                    == Start Time: #{transcript_phrase.start_time}
                    == End Time: #{transcript_phrase.end_time}
                    == Text: #{transcript_phrase.text}


  #add-transcript
    = link_to 'Add transcript', new_media_item_transcript_path(@media_item)


%table#metadata.small
  %tr#item_id
    %td.name
      Item ID
    %td.value
      = @media_item.item_id

  %tr#depositor
    %td.name
      Depositor
    %td.value
      = @media_item.depositor.full_name

  %tr#recorded_at
    %td.name
      Recorded on
    %td.value
      = @media_item.recorded_at

  %tr#annotator_name
    %td.name
      Name of Annotator
    %td.value
      = @media_item.annotator_name

  %tr#presenter_name
    %td.name
      Name of Presenter
    %td.value
      = @media_item.presenter_name

  %tr#presenter_role
    %td.name
      Role of Presenter
    %td.value
      = @media_item.presenter_role

  %tr#language_code
    %td.name
      Language Code
    %td.value
      = @media_item.language_code

  %tr#copyright
    %td.name
      Copyright
    %td.value
      = @media_item.copyright

  %tr#license
    %td.name
      License
    %td.value
      = @media_item.license

  %tr#private
    %td.name
      Private
    %td.value
      = @media_item.private

  - if (@media_item.depositor.id == current_user.id)
    %tr#download_media
      %td.name
        Download
      %td.value
        = link_to @media_item.original.url(:standard), @media_item.original.url(:standard)

      %tr#download_eopas
        %td.name
          Transcript
        %td.value
          FIXME: missing link to transcript
          = link_to @media_item.original.url(:standard), @media_item.original.url(:standard)

      %tr#download_transcript
        %td.name
          Original
        %td.value
          FIXME: missing link to original transcript
          = link_to @media_item.original.url(:standard), @media_item.original.url(:standard)

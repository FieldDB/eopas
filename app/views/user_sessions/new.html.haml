%h2 Login

= form_for @user_session do |f|
  %fieldset
    = error_messages @user_session

    = f.label :email
    %br
    = f.text_field :email, :class => 'text'
    %br
    %br
    = f.label :password
    %br
    = f.password_field :password
    %br
    %br
    = f.check_box :remember_me
    = f.label :remember_me
    %br
  = f.submit "Login"

%br
= link_to 'Forgot your password?', new_forgotten_password_path

